<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>    
    <linkManager>
      <patch:attribute name="defaultProvider">custom</patch:attribute>
      <providers>
        <clear />
        <add name="custom"
             type="addemo.Custom_Code.CustomLinkProvider, addemo"
             addAspxExtension="false" alwaysIncludeServerUrl="false" encodeNames="true" languageEmbedding="always"
             languageLocation="filePath" lowercaseUrls="true" shortenUrls="true" useDisplayName="false" />
      </providers>
    </linkManager>
  </sitecore>
</configuration>
